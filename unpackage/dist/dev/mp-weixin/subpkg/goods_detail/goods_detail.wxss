swiper {
  height: 750rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.goods-info-box {
  padding: 6px;
}
.goods-info-box .price {
  font-size: 18px;
  color: red;
  margin: 8px;
}
.goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-info-box .goods-info-body .goods-info-name {
  font-size: 12px;
  margin-right: 10px;
}
.goods-info-box .goods-info-body .goods-info-icon {
  width: 120px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #e7e7e7;
  color: gray;
}
.goods-info-box .yun {
  font-size: 12px;
  margin: 10px 0;
  color: gray;
}
.goods-carts {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}