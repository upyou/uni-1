/* 水平间距 */
.address {
  height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.address .address-text {
  flex: 1;
  text-align: center;
  line-height: 55px;
}
.address image {
  display: block;
  width: 100%;
  height: 5px;
}
.address-info {
  padding: 10px 0;
  font-size: 14px;
}
.address-info image {
  display: block;
  width: 100%;
  height: 5px;
  margin-top: 10px;
}
.address-info .row1 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  padding: 5px;
}
.address-info .row2 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  padding: 5px;
}
