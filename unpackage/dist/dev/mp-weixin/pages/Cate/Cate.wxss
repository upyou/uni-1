/* 水平间距 */
.scroll-view-container {
  width: 100%;
  display: flex;
}
.scroll-view-container .left .left-scroll {
  width: 200rpx;
}
.scroll-view-container .left .left-scroll .left-item {
  background-color: #f7f7f7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.scroll-view-container .left .left-scroll .active {
  background-color: #fff;
  position: relative;
}
.scroll-view-container .left .left-scroll .active::before {
  content: "";
  position: absolute;
  width: 3px;
  height: 30px;
  background-color: red;
  display: block;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
.rgiht {
  width: 100%;
}
.rgiht .rgiht-item-title {
  width: 100%;
  text-align: center;
  font-size: 12px;
  font-weight: bold;
  padding: 15px 0px;
}
.rgiht .rgiht-item-list {
  display: flex;
  flex-wrap: wrap;
}
.rgiht .rgiht-item-list .rgiht-item-list-item {
  display: flex;
  width: 33.33%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.rgiht .rgiht-item-list .rgiht-item-list-item image {
  width: 60px;
  height: 60px;
}
.rgiht .rgiht-item-list .rgiht-item-list-item text {
  font-size: 12px;
}